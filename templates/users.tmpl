{{ template "header.tmpl" . }}

<a href="/">Home</a>
{{ if gt .User.ID 0 }}
  <a href="/user">{{ .User.Username }}</a>
  <a href="/logout">Logout</a>
{{ end }}

<h1>{{ .Title }}</h1>

<table>
{{ range .Users }}
  {{ if .Watchlists }}
    <tr><td colspan=6>
    {{ if .URL }}
      <a href="{{ .URL }}">{{ .Name }}</a>
    {{ else }}
      {{ .Name }}
    {{ end }}
    </td></tr>
    {{ range .Watchlists }}
      <tr>
        <td><a href="{{ .Bill.URL }}">{{ .Bill.Number }}</a></td>
        <td>{{ .Stance }}</td>
        <td>{{ .Bill.Status }}</td>
        <td>{{ .Bill.LastActionDate }}</td>
        <td>{{ .Bill.LastAction }}</td>
        <td>{{ .Bill.Title }}</td>
      </tr>
    {{ end }}
  {{ end }}
{{ end }}
</table>

{{ template "footer.tmpl" . }}
